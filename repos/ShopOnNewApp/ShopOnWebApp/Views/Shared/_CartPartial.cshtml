@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

<div class="navbar-nav justify-content-end">
    <a asp-controller="Cart" asp-action="DisplayCart">
        <div class="cart-img"></div>
        @if(httpContextAccessor.HttpContext.Session.GetInt32("CartCount") == null)
        {
            <span class="badge badge-pill badge-light cart-pill">0</span>
        }
        else
        {
            <span class="badge badge-pill badge-light cart-pill">@httpContextAccessor.HttpContext.Session.GetInt32("CartCount")</span>
        }

    </a>
</div>