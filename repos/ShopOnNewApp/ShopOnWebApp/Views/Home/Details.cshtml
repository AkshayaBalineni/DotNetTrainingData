@model ShopOnCommonLayer.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <hr />
    @if(Model == null)
    {
        <div class="row">
            <div class="col-12">
                <label>Invalid Operation</label>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <img src="~/@Url.Content(Model.ImageUrl)" />
            </div>
            <div class="col-md-8 col-sm-12">
                <h3 class="pname">@Model.ProductName</h3>
                <p class="card-text">
                    <span class="inr-sign"></span>
                    <span class="price">@Model.ProductPrice</span>
                </p>
                <div>
                    <a class="btn btn-outline-dark" asp-controller="Cart" asp-action="AddToCart" asp-route-pid="@Model.PId">
                        Add To Cart
                    </a>
                    <a class="btn btn-outline-danger" asp-controller="Cart" asp-action="BuyNow" asp-route-pid="@Model.PId">
                        Buy Now
                    </a>

                </div>
            </div>
        </div>
    }

</div>
    <hr />
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Continue Shopping</a>
</div>
