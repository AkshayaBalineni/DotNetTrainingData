@model IEnumerable<ShopOnCommonLayer.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="banner" style="max-width: 1600px; align-content: center;">
    <img src="../images/Home.jpg" style="width:100%">
</div>
<div>
    <hr />
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
        </ul>
    </nav>
</div>
<hr />

<div class="container">
    @if (@ViewBag.productCount == 0)
    {
        <div class="row">
            <div class="col-12">
                <label>No Such Product Exists</label>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-lg-3 col-sm-4">
                    <div class="card my-lg-3 w-100 hover-shawdow">
                        <div class="card-body text-center">
                            <a asp-controller="Home" asp-action="Details" asp-route-pid="@product.PId">
                                <img src="~/@Url.Content(product.ImageUrl)" />
                            </a>
                            <h4 class="card-text">
                                <label class="pname">@product.ProductName</label>
                            </h4>
                            <p class="card-text">
                                <span class="inr-sign"></span>
                                <span class="price">@product.ProductPrice</span>
                            </p>
                        </div>
                    </div>
                </div>
            } 
        </div>
    }
    </div>