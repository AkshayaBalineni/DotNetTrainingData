@model TickectManagementWebApp.Models.CloseTicket

@{
    ViewData["Title"] = "CloseTicket";
}

<h4>Closing Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CloseTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketId" class="control-label"></label>
                <select class="form-control" asp-for="TicketId" aria-label="Default select example">
                    <option selected>select Ticket_ID</option>
                    @foreach (var ticket in ViewBag.Tickects)
                    {
                        <option value=@ticket.TicketId>@ticket.TicketId</option>
                    }
                    </select>
                <span asp-validation-for="TicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReslovedBy" class="control-label"></label>
                <input asp-for="ReslovedBy" class="form-control" />
                <span asp-validation-for="ReslovedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resolution" class="control-label"></label>
                <input asp-for="Resolution" class="form-control" />
                <span asp-validation-for="Resolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Close Ticket" class="btn btn-primary" />
                <a class="btn btn-outline-danger" asp-action="Index" asp-controller="Home">Cancel</a> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

